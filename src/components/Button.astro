---
export interface Props {
  text: string;
  link: string;
  smallVersion?: boolean;
}

const { link, text, smallVersion } = Astro.props;
---

<a class={`link-button ${smallVersion ? "link-button-small" : ""}`} href={link}
  >{text}</a
>

<style>
  .link-button {
    width: 75%;
    max-width: 21.875rem;
    height: 3.75rem;
    margin-bottom: 0.75rem;
    border: 3px solid black;
    border-radius: 5px;
    background-color: var(--color-white);
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    filter: drop-shadow(7px 7px 0 rgb(0 0 0 / 1));
    font-family: var(--text-font-family);
    font-weight: var(--text-default-weight);
    font-size: 1.5rem;
    color: var(--color-black);

  }

  .link-button-small {
    height: 40px;
    width: fit-content;
    padding: 0 1rem;
    font-size: 1.2rem;
  }

  .link-button:hover {
    cursor: pointer;
    background-color: var(--color-black);
    color: var(--color-white);
  }
</style>
