---
export interface Props {
  pictureSrc: string;
  pictureAlt: string;
  title: string;
  subTitle: string;
}

const { pictureSrc, pictureAlt, title, subTitle } = Astro.props;
---

<header class="header">
  <img class="header-img" src={pictureSrc} alt={pictureAlt} />
  <h1 class="header-title">{title}</h1>
  <h2 class="header-subtitle">{subTitle}</h2>
</header>

<style>
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--color-white);
    font-family: var(--text-font-family);
    margin-bottom: 2.5rem;
  }

  .header-img {
    width: 9.375rem;
    border: 0.1875rem solid var(--color-light-green);
    border-radius: 50%;
    margin-bottom: 0.75rem;
  }

  .header-title {
    font-weight: var(--text-title-weight);
    font-size: 2.25rem;
    margin-bottom: 0.375rem;
  }

  .header-subtitle {
    font-weight: var(--text-default-weight);
    font-size: 1.2rem;
    text-align: center;
  }
</style>
