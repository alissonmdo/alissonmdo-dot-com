---
export interface Props {
  text: string;
}

const { text } = Astro.props;
---

<footer class="footer">
  {text}
</footer>

<style>
  .footer {
    position: fixed;
    bottom: 0;
    margin-bottom: 0.75rem;
    font-family: var(--text-font-family);
    color: var(--color-white);
    font-size: 1.125rem;
  }
</style>
